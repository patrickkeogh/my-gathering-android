<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.activities.Activity_Gathering_Details">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightGrey"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_gathering_name"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="1dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlack"
            tools:text="Gathering Name"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_gathering_banner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/barbeque" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="testNotification"
            android:text="Test Notification" />

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="1dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorAccent"
            android:text="Free"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_gathering_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Thursday May 5th, 2017"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_gathering_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Barrie Molson Centre"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_gathering_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barrie, ON"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_gathering_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Canada"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_gathering_type"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concert"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_gathering_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_gathering_description"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bacon ipsum dolor amet biltong cow tenderloin corned beef beef ribs sirloin swine shankle tongue alcatra ham hock hamburger shank. Rump pork chop fatback, drumstick tongue shoulder turducken ribeye. Porchetta ham hock t-bone jowl, prosciutto shoulder turducken leberkas salami pork belly frankfurter. T-bone filet mignon kevin swine turducken chicken beef ribs."
            android:textSize="14sp" />



    </LinearLayout>

    </ScrollView>


</FrameLayout>